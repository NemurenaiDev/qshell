{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./build/src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "./src"
    ]
}